pipeline {
    agent any
    stages{
        stage('listar directio actual'){
            steps {
                sh 'ls -la'
            }
        }
        stage('Build de docker'){
            steps {
                sh 'docker build -t web:latest .'
            }
        }
        stage('rename and upload '){
            steps {
                sh 'docker image tag web:latest registry.pps.local:5000/web:latest && \
                docker push registry.pps.local:5000/web:latest'
            }
        }
        stage('launch service web'){
            steps {
                sh 'docker service create --publish 80:3000 --name webDev  --replicas 3 registry.pps.local:5000/web:latest'
            }
        }
        
    }
}